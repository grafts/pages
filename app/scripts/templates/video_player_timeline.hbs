<div class="track">
	<div class="progress">
		<div class="edit-tool" data-edit="script">
			<button class="edit-tool-create">
				<i class="icon-plus"></i>
			</button>
		</div>
	</div>
</div>
<ul class="pointers">
	{{#if pointers}}
		{{#each pointers}}
			<li class="item" data-time="{{this.hhmmss}}" style="left: {{this.position}}%;">
				{{!-- <div class="time">{{this.hhmmss}}</div> --}}
				<div class="pointer" data-title="{{this.hhmmss}} / {{this.script}}"></div>
				<div class="summary">{{this.hhmmss}} / {{this.script}}</div>
			</li>
		{{/each}}
	{{/if}}
</ul>
