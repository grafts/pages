{{#each scripts}}
	<li class="item">
		<div class="clock">{{this.hhmmss}}</div>
		<button class="anker"></button>
		<div class="script">
			<p class="sans-serif editable" data-attr="script">{{this.script}}</p>
		</div>
		<button class="comments-link uneditable">
			{{#if this.comments}}
				<span class="count">{{this.comments.length}}</span>
			{{else}}
				<span class="count">0</span>
			{{/if}}
			<i class="icon-cancel"></i>
		</button>
		<button class="script-delete">
			<i class="icon-cancel"></i>
		</button>
	</li>
{{/each}}